<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wooden1">
        <TextView
            android:id="@+id/txv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="90dp"
            android:gravity="center"
            android:text="SIGNUP"
            android:textColor="@color/colorWhite"
            android:textSize="40sp"

            tools:ignore="RtlSymmetry">

        </TextView>

        <EditText
            android:id="@+id/textfname"
            android:layout_below="@id/txv1"
            android:background="@color/colorWhite"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="50dp"
            android:hint="First Name"
            android:inputType="textPersonName"

            />

        <EditText
            android:id="@+id/textlname"
            android:layout_below="@id/textfname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"

            android:hint="Last Name"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/pass"
            android:layout_below="@id/textlname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            />

        <EditText
            android:id="@+id/email"
            android:layout_below="@id/pass"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:background="@color/white"
            android:layout_marginTop="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            />

        <EditText
            android:id="@+id/phone"
            android:layout_below="@id/email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="20dp"
            android:hint="Phone"
            android:inputType="phone"
            />

        <Button
            android:id="@+id/regbutton"
            android:layout_below="@id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Register"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="120dp"
            android:background="@color/colorRed"

            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/login2"
            android:layout_below="@id/phone"
            android:layout_toRightOf="@id/regbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"

            android:background="@color/colorRed"

            android:textColor="@color/white"

            />
    </RelativeLayout>

</LinearLayout>