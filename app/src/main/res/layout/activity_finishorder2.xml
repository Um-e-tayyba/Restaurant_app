<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/wooden1"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLEASE CONFRIM YOUR CASH PAYMENT SELECTION! "
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:id="@+id/fo2_t1"
        android:textSize="35dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By clicking the  button below that is PLACE ORDER you are confriming your order your order will begin precessing as soon as you click PLACE ORDER button"

        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:background="#000000"
        android:id="@+id/fo2_t2"
        android:layout_below="@id/fo2_t1"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CUSTOMERS DETAILS "
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/fo2_t3"
        android:textSize="25sp"
        android:layout_below="@id/fo2_t2"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/name"
        android:textSize="25sp"
        android:layout_below="@id/fo2_t3"


        >

    </TextView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/last"
        android:layout_below="@id/name"
        android:textSize="25sp"

        >
    </TextView>


    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/phone"
        android:layout_below="@id/last"


        >

    </TextView>

    <TextView
        android:layout_width="200dp"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/email"
        android:layout_below="@id/phone"


        >
    </TextView>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:id="@+id/address"
        android:layout_below="@id/email"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        >



    </TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/placeorder"
        android:layout_below="@id/address"
        android:layout_marginTop="27dp"
        android:textColor="@color/white"
        android:background="#FF0000"
        android:text="PLACE ORDER"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>