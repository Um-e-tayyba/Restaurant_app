<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ordernow"
        android:background="@drawable/wooden1"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:id="@+id/ordername"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orderimage"
            android:layout_below="@id/ordername"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:text="Description"
            android:layout_marginBottom="25dp"
            android:layout_below="@id/orderimage"
            android:textColor="@color/white"
            android:id="@+id/descriptionheading"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:layout_marginBottom="35dp"
            android:layout_below="@id/descriptionheading"
            android:textColor="@color/yellow"
            android:id="@+id/orderdescription"

            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:layout_below="@id/orderdescription"
            android:textColor="@color/colorPrimary"
            android:hint="select drink size"
            android:background="@color/white"
            android:id="@+id/size"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/size"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/price"
            android:text="Price"
            android:textColor="@color/yellow"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add To Cart"
android:textStyle="bold"
            android:id="@+id/button"
            android:layout_below="@id/price"
            android:layout_marginLeft="130dp"
            />
    </RelativeLayout>
</ScrollView>