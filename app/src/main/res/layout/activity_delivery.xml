<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".delivery">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/wooden1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt3"
            android:text="DELIVERY DETAILS"
            android:textSize="40dp"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="60dp"
            android:gravity="center"
            ></TextView>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:background="@color/colorWhite"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:id="@+id/fname1"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_below="@id/txt3"
            android:layout_marginTop="70dp"

            />
        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:hint="Last Name"
            android:id="@+id/lname1"
            android:layout_marginLeft="55dp"
            android:background="@color/colorWhite"
            android:inputType="textPersonName"
            android:layout_below="@id/fname1"
            android:gravity="center"
            android:layout_marginTop="20dp"

            />
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:id="@+id/txt1"
            android:layout_below="@id/lname1"
            android:text="Select City Below:"
            android:layout_marginTop="20dp"

            android:layout_marginLeft="55dp"
            ></TextView>
        <Spinner
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:textSize="25dp"
            android:background="@color/colorWhite"
            android:layout_marginLeft="55dp"
            android:id="@+id/city"
            android:layout_below="@id/txt1"

            android:layout_marginTop="20dp"

            ></Spinner>

        <EditText
            android:id="@+id/address1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginLeft="55dp"
            android:layout_below="@id/city"
            android:hint="Address"
            android:textSize="25dp"
            android:inputType="textPostalAddress"
            android:layout_marginTop="20dp"
            android:gravity="center"></EditText>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginLeft="55dp"
            android:id="@+id/phone1"
            android:inputType="phone"
            android:textSize="25dp"
            android:layout_below="@id/address1"
            android:hint="Phone Number"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >

        </EditText>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:layout_marginLeft="55dp"
            android:id="@+id/email1"
            android:layout_below="@id/phone1"
            android:hint="Email"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            ></EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnnext"
            android:background="@color/colorRed"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/email1"
            android:layout_marginLeft="157dp"
            android:text="NEXT"

            android:textSize="20dp"
            android:layout_marginTop="30dp"
            ></Button>

    </RelativeLayout>
</LinearLayout>